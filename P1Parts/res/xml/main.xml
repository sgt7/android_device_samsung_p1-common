<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/category_capacitive_buttons_title"
        android:key="buttons_category">
        <CheckBoxPreference
            android:key="buttons_disable"
            android:title="@string/capacitive_buttons_title"
            android:summary="@string/capacitive_buttons_summary"
            android:disableDependentsState="true"
            android:defaultValue="false" />
            <!-- Touch key backlight timeout -->
            <ListPreference
                android:key="backlight_timeout"
                android:title="@string/backlight_timeout_title_head"
                android:summary="@string/backlight_timeout_summary_head"
                android:entries="@array/backlight_timeout_entries"
                android:entryValues="@array/backlight_timeout_entries_values"
                android:defaultValue="1600"
                android:dependency="buttons_disable" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_fast_charge_title"
        android:key="fast_charge_category">
        <ListPreference
            android:key="fast_charge"
            android:title="@string/fast_charge_title"
            android:entries="@array/fast_charge_entries"
            android:entryValues="@array/fast_charge_values"
            android:defaultValue="0" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_gpu_title"
        android:key="gpu_category">
        <ListPreference
            android:key="gpu_overclock"
            android:title="@string/gpu_overclock_title"
            android:entries="@array/gpu_overclock_entries"
            android:entryValues="@array/gpu_overclock_values"
            android:defaultValue="0" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_live_oc_title"
        android:key="live_oc_category">
        <ListPreference
            android:key="live_oc"
            android:title="@string/live_oc_title"
            android:entries="@array/live_oc_entries"
            android:entryValues="@array/live_oc_values"
            android:defaultValue="100" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_radio_title"
        android:key="category_radio">
        <!-- UMTS/HSDPA/HSUPA settings -->
        <ListPreference
            android:key="hspa"
            android:title="@string/hspa_title_head"
            android:summary="@string/hspa_summary_head"
            android:entries="@array/hspa_entries"
            android:entryValues="@array/hspa_entries_values"
            android:defaultValue="23" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_tvout_title">
        <CheckBoxPreference
            android:key="tvout_enable"
            android:title="@string/tvout_enable_head"
            android:summaryOn="@string/tvout_enable_summary_on"
            android:summaryOff="@string/tvout_enable_summary_nocable"
            android:persistent="false"
            android:enabled="false" />
        <ListPreference
            android:key="tvout_system"
            android:title="@string/tvout_system_head"
            android:summary="@string/tvout_system_summary"
            android:entries="@array/tvout_system_entries"
            android:entryValues="@array/tvout_system_entries_values"
            android:defaultValue="2" />
        <CheckBoxPreference
            android:key="hdmi_enable"
            android:title="@string/hdmi_dock_head"
            android:enabled="false"
            android:persistent="false"
            android:summaryOff="@string/hdmi_dock_summary_nodock"
            android:summaryOn="@string/hdmi_dock_summary_on"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_wifi_pm_title"
        android:key="wifi_pm_category">
        <ListPreference
            android:key="wifi_pm"
            android:title="@string/wifi_pm_title"
            android:entries="@array/wifi_pm_entries"
            android:entryValues="@array/wifi_pm_values"
            android:defaultValue="0" />
    </PreferenceCategory>

</PreferenceScreen>
